---
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import { SITE } from "../config";
import Content from "./Content.astro";
import PageTitle from "./PageTitle.astro";
import SectionContainer from "./SectionContainer.astro";
import BadgeGroup from "./badge/BadgeGroup.astro";
import BadgeIcon from "./badge/BadgeIcon.astro";
import BadgeMessage from "./badge/BadgeMessage.astro";
import Button from "./button/Button.astro";
import ButtonGroup from "./button/ButtonGroup.astro";
import bannerImg from "/public/images/features1.png";
---

<SectionContainer class="page-banner--container py-16">
    <SectionContainer class="page-banner--inner-container wrap wrap-px z-10">
        <BadgeGroup alignment="center">
            <BadgeMessage>Открой EDUCRM!</BadgeMessage>
            <BadgeIcon icon="mdi:hand-wave" />
        </BadgeGroup>
        <PageTitle class="text-center mx-auto" type="heavy">
            Добро пожаловать на платформу для организации занятий!
        </PageTitle>
        <Content class="text-center" alignment="center">
            <p>
                Наша платформа создана специально для репетиторов, чтобы
                упростить ведение занятий и улучшить взаимодействие с учениками.
                Мы предоставляем возможности, объединяющие все необходимые
                инструменты в одном месте.{" "}
            </p>
        </Content>
        <div class="mt-6 mb-16 text-center">
            <ButtonGroup alignment="center">
                <Button href="/start#features">Изучите возможности</Button>
                <a role="button" href={SITE.siteUrl} class="btn btn--secondary">
                    Начните пользоваться
                    <Icon name="mdi:arrow-right" class="w-6" />
                </a>
            </ButtonGroup>
        </div>
        <div class="page-banner--image">
            <Image
                src={bannerImg.src}
                width={bannerImg.width}
                height={bannerImg.height}
                alt={"Page Banner"}
                format={"webp"}
                class="mx-auto iii"
            />
        </div>
    </SectionContainer>
</SectionContainer>
